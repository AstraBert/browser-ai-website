---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'browser-ai',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero
    tagline="browser-ai"
    title="A New Browsing Experience"
    subtitle="Browse the web and get real-time AI summaries of the websites you are visiting!"
    actions={[
      { variant: 'primary', text: 'Get it now!', href: 'https://github.com/AstraBert/browser-ai', icon: 'tabler:arrow-right' },
      { text: 'Learn more', href: 'https://github.com/AstraBert/browser-ai/tree/main?tab=readme-ov-file#how-it-works' },
    ]}
    image={{
      src: '~/assets/images/browser-ai.png',
      alt: 'browser-ai logo',
    }}
  />

  <CallToAction
    title="Get the browser-ai app now!"
    subtitle="Do you want to have a really AI-assisted browsing experience? Do you want to have the freedom to navigate your favorite websites, while still getting a quick overview of them? Get the app now!"
    actions={[
      {
        variant: 'primary',
        text: 'To the app',
        href: 'https://github.com/AstraBert/browser-ai',
        icon: 'tabler:arrow-right',
      },
    ]}
  />
</Layout>
